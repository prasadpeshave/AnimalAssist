<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@drawable/logsign">

    <TextView
        android:id="@+id/logo_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User details"
        android:textSize="40sp"
        android:fontFamily="cursive"
        android:layout_marginBottom="385dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <EditText
        android:id="@+id/useem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your Email"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:paddingLeft="20dp"
        android:layout_marginBottom="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_name1"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter full Name"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/useem" />

    <EditText
        android:id="@+id/pass"
        android:inputType="textPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:textColor="@color/black"

        android:textFontWeight="@android:integer/config_longAnimTime"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/butsign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:backgroundTint="@color/blupur"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:paddingLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pass" />
    <Button
        android:id="@+id/butexis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Already exist? Login"
        android:backgroundTint="@color/blupur"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:layout_marginTop="5dp"
        android:textFontWeight="@android:integer/config_longAnimTime"
        android:paddingLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/butsign" />
</androidx.constraintlayout.widget.ConstraintLayout>